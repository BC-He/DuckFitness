<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DuckFitness.History"
             Title="History"
             BackgroundColor="#181B1F">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Page Header -->
            <VerticalStackLayout HorizontalOptions="Center">
                <Label Text="🏆 Historical Records"
                       FontSize="28"
                       TextColor="#FFFFFF"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center" />
                <Label Text="Track your progress and personal records"
                       FontSize="16"
                       TextColor="#AAAAAA"
                       HorizontalTextAlignment="Center" />
            </VerticalStackLayout>

            <!-- Running Records Section -->
            <Frame BackgroundColor="#1E1E1E" CornerRadius="15" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="🏃‍♂️ Running Records"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#FFFFFF" />

                    <BoxView HeightRequest="1" BackgroundColor="#444444" />

                    <Label Text="• Distance: 5 km"
                           FontSize="16"
                           TextColor="#DDDDDD" />
                    <Label Text="• Time Spent: 30 min"
                           FontSize="16"
                           TextColor="#DDDDDD" />
                    <Label Text="• Date: 2025-01-01"
                           FontSize="16"
                           TextColor="#DDDDDD" />
                </VerticalStackLayout>
            </Frame>

            <!-- Weight Training PR Section -->
            <Frame BackgroundColor="#1E1E1E" CornerRadius="15" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="🏋️‍♀️ Weight Training Personal Records"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#FFFFFF" />

                    <BoxView HeightRequest="1" BackgroundColor="#444444" />

                    <!-- Lower Body PRs -->
                    <Label Text="💪 Lower Body PRs"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#FFFFFF" />
                    <Label Text="• Squat: 150 kg"
                           FontSize="16"
                           TextColor="#DDDDDD" />
                    <Label Text="• Hex Bar Deadlift: 210 kg"
                           FontSize="16"
                           TextColor="#DDDDDD" />
                    <Label Text="• Leg Press: 180 kg"
                           FontSize="16"
                           TextColor="#DDDDDD" />

                    <!-- Upper Body PRs -->
                    <Label Text="💪 Upper Body PRs"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#FFFFFF"
                           Margin="0,10,0,0" />
                    <Label Text="• Barbell Bench Press: 105 kg"
                           FontSize="16"
                           TextColor="#DDDDDD" />
                    <Label Text="• Dumbbell Bench Press: 45 kg x 4 reps"
                           FontSize="16"
                           TextColor="#DDDDDD" />
                    <Label Text="• Wide-Grip Lat Pulldown: 200 lbs x 5 reps"
                           FontSize="16"
                           TextColor="#DDDDDD" />

                    <!-- Shoulder PRs -->
                    <Label Text="💪 Shoulder PRs"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#FFFFFF"
                           Margin="0,10,0,0" />
                    <Label Text="• Dumbbell Shoulder Press: 25 kg x 2"
                           FontSize="16"
                           TextColor="#DDDDDD" />
                    <Label Text="• Cable Fly: 60 kg"
                           FontSize="16"
                           TextColor="#DDDDDD" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
