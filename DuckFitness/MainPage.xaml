<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DuckFitness.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="duck.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" />

            <Label
                Text="Welcome to Duck Fitness"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" FontSize="Large" />

            <HorizontalStackLayout
            Padding="0,0"
                Spacing="15">
                <Button Text="Running"
        Clicked="OnRunningButtonClicked"/>
                <Button Text="Weight Training"
        Clicked="OnWeightTrainingButtonClicked"/>
                <Button Text="History"
        Clicked="OnHistoryButtonClicked"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
